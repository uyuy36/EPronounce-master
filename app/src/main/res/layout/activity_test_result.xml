<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context="com.example.uytai.epronounce.TestResultActivity">
<RelativeLayout
    android:layout_margin="10dp"
    android:background="@drawable/custom_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="TEST RESULT" />

    <Button
        android:id="@+id/result"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/custom_testresult"
        android:textSize="35sp"
        android:text="Button" />

    <ImageView
        android:id="@+id/btn_review"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_search" />

    <ImageView
        android:id="@+id/btn_again"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/btn_review"
        android:layout_toStartOf="@+id/result"
        android:src="@drawable/ic_again" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/btn_review"
        android:layout_toEndOf="@+id/result"
        android:src="@drawable/ic_home"
        />
</RelativeLayout>
</RelativeLayout>
