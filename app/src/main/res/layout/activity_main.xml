<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.uytai.epronounce.MainActivity">

    <TextView
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="ENGLISH PRONOUNCE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_pro_a"
        android:layout_marginTop="40dp"
        android:text="PRONOUNCE A"
        android:background="@drawable/custom_button_a"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <Button
        android:id="@+id/btn_pro_b"
        android:layout_marginTop="15dp"
        android:text="PRONOUNCE B"
        android:background="@drawable/custom_button_b"
        android:layout_below="@+id/btna"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_resource_management"
            android:background="@drawable/custom_button_resuorce"
            android:textAllCaps="false"
            android:text="Resource management"
            android:layout_width="200dp"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>
