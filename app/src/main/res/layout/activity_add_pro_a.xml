<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uytai.epronounce.AddProAActivity">

    <TextView
        android:textColor="#c40a16"
        android:textSize="22sp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Add Sentence" />

    <TextView
        android:textStyle="bold"
        android:textColor="#0a7ac4"
        android:textSize="18sp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="35dp"
        android:layout_marginTop="53dp"
        android:text="PRONOUNCE A" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tip_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your sentence" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="99dp"
        android:layout_toEndOf="@+id/textView"
        android:src="@drawable/ic_ok"
        />

    <ImageView
        android:id="@+id/cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/save"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_not"
        android:layout_toStartOf="@+id/textView" />
</RelativeLayout>
